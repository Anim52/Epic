<Window
    x:Class="GG.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GG"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    Background="#111111"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="290" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#484848" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="290" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#484848" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <!-- Область кликабельного чекбокса -->
                            <Border Width="20" Height="20" BorderBrush="Gray" BorderThickness="2"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Галочка -->
                                <Path x:Name="CheckMark" Data="M4,10 L8,14 L16,4" Stroke="White"
                                  StrokeThickness="2" Visibility="Collapsed"/>
                            </Border>

                            <!-- Текст чекбокса -->
                            <ContentPresenter Margin="5,0,0,0"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <!-- Галочка появляется при нажатии -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="1"
            Margin="0,90,0,100"
            Background="#1f1f1f">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel>
                    <Image
                        Width="55"
                        Margin="0,50,0,30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="gg/LogoEGS.png" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                        <Button
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            Background="Blue">
                            <Image Margin="7" Source="gg/facebook.png" />
                        </Button>
                        <Button
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            Background="White">
                            <Image Margin="7" Source="gg/google.png" />
                        </Button>
                        <Button
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            Background=" #36a5c0">
                            <Image Margin="7" Source="gg/playstation.png" />
                        </Button>
                        <Button
                            Width="50"
                            Height="50"
                            Margin="0,0,10,0"
                            Background="Green">
                            <Image Margin="7" Source="gg/xbox.png" />
                        </Button>
                        <Button
                            Width="50"
                            Height="50"
                            Background="Red">
                            <Image Margin="7" Source="gg/nintendo.png" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Top">
                <StackPanel>
                    <Label
                        Margin="50,20,0,0"
                        Content="SING IN"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White" />
                    <TextBox VerticalContentAlignment="Center" />
                    <PasswordBox Margin="10,10,10,10" VerticalContentAlignment="Center" />
                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            IsThreeState="False"
                            Margin="50,5,0,0"
                            Background="#1f1f1f"
                            Content="Remember me"
                            FontSize="16"
                            Foreground="Gray" Style="{StaticResource CustomCheckBoxStyle}" />
                        <TextBlock
                            Margin="14,4,0,0"
                            FontSize="16"
                            Foreground="Gray">
                            <Hyperlink TextDecorations="None">
                                <Run
                                    Background="Transparent"
                                    Foreground="Gray"
                                    Text="Forgot Your Password"
                                    TextDecorations="None" />
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel HorizontalAlignment="Center">
                    <Button
                        Width="290"
                        Height="40"
                        Background="#027aee"
                        Content="LOG IN NOW"
                        Foreground="White" />
                    <TextBlock
                        Margin="0,25,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Hyperlink Foreground="White" TextDecorations="None">
                            <Run Text="Privacy Policy" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Foreground="Gray" Text="Don`t have an Epic Games account?" />
                        <Hyperlink Foreground="White" TextDecorations="None">
                            <Run Text="Sign Up" />
                        </Hyperlink>
                        <Run Foreground="Gray" Text="or" />
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center">
                        <Hyperlink Foreground="White" TextDecorations="None">
                            <Run Text="Sing In Later" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</Window>
